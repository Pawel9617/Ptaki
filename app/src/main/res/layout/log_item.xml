<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp">

        <TextView
            android:id="@+id/txtViewGatunek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gatunek"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/txtViewData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data zÅ‚apania"
            android:textSize="15sp"
            android:layout_below="@+id/txtViewGatunek"
            android:layout_marginStart="8dp"/>

        <TextView
            android:id="@+id/txtViewLokalizacja"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lokalizacja"
            android:textSize="15sp"
            android:layout_below="@+id/txtViewData"
            android:layout_marginStart="8dp"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>